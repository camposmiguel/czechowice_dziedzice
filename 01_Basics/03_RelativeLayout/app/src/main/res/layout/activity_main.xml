<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miguelcr.a03_relativelayout.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star"
        android:layout_below="@+id/textViewPokemonName"
        android:layout_alignLeft="@+id/textViewPokemonName"
        android:layout_alignStart="@+id/textViewPokemonName"
        android:onClick="starClicked"
        android:id="@+id/imageViewStar1"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star"
        android:id="@+id/imageViewStar2"
        android:layout_below="@+id/textViewPokemonName"
        android:layout_toRightOf="@+id/imageViewStar1"
        android:onClick="starClicked"
        android:layout_alignBottom="@+id/imageViewStar1"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_jigglypuff"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:id="@+id/imageViewAvatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_off"
        android:layout_below="@+id/textViewPokemonName"
        android:layout_toRightOf="@+id/imageViewStar3"
        android:layout_toEndOf="@+id/imageViewStar3"
        android:onClick="starClicked"
        android:id="@+id/imageViewStar4"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_off"
        android:layout_below="@+id/textViewPokemonName"
        android:layout_toRightOf="@+id/imageViewStar4"
        android:layout_toEndOf="@+id/imageViewStar4"
        android:onClick="starClicked"
        android:id="@+id/imageViewStar5"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="Jigglypuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textViewPokemonName"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/imageViewAvatar"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_toEndOf="@+id/imageViewAvatar"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_off"
        android:onClick="starClicked"
        android:id="@+id/imageViewStar3"
        android:layout_below="@+id/textViewPokemonName"
        android:layout_toRightOf="@+id/imageViewStar2"
        android:layout_toEndOf="@+id/imageViewStar2"
        android:layout_marginRight="5dp" />
</RelativeLayout>
